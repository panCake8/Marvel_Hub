<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">

<data>
    <variable
        name="viewModel"
        type="com.example.marvel_hub.ui.creators.CreatorsViewModel" />

</data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/app_bar_details"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Creators"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="180dp"
            android:layout_height="180dp"
            tools:src="@drawable/marvel"
            android:layout_marginTop="@dimen/large_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_bar_details" />

        <TextView
            android:id="@+id/text_creator_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/large_text"
            android:textColor="@color/black_87"
            android:layout_marginTop="@dimen/large_margin"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            tools:text="Creator Name" />

        <TextView
            android:id="@+id/text_about_creator_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/large_margin"
            android:textColor="@color/red"
            android:textSize="@dimen/large_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_creator_name"
            tools:text="About Creator" />


        <TextView
            android:id="@+id/text_about_creator_graph"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/large_margin"
            android:scrollbars="vertical"
            android:textColor="@color/black_60"
            android:textSize="@dimen/body_text"
            app:layout_constraintBottom_toTopOf="@+id/products_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_about_creator_title"
            app:layout_constraintVertical_bias="0.0"
            tools:text="@tools:sample/lorem/random" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/products_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_button"
            android:layout_margin="@dimen/large_margin"
            android:textAllCaps="false"
            android:textColor="@color/white_100"
            android:textSize="@dimen/title_text"
            android:background="@drawable/button_background"
            app:layout_constraintCircleRadius="@dimen/large_radius"
            android:text="Products"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"


            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>