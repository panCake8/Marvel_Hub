<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.example.marvel_hub.data.model.SeriesModel" />

        <variable
            name="listener"
            type="com.example.marvel_hub.ui.search.adapter.interactions.SeriesInteractionListener" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_card_height"
        android:layout_marginHorizontal="@dimen/small_margin"
        android:layout_marginVertical="@dimen/margin_medium"
        app:cardCornerRadius="@dimen/medium_radius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_search_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_search_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="@drawable/card_foreground"
                android:scaleType="centerCrop"
                app:imageUrl="@{item.thumbnail.image}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:src="@drawable/image" />

            <TextView
                android:id="@+id/text_result_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                android:text="@{item.title}"
                android:textColor="@color/search_result_text_color"
                android:textSize="@dimen/card_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="name" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>