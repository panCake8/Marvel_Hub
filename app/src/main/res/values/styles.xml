<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- app bar-->
    <style name="AppBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/app_bar_height</item>
        <item name="android:backgroundTint">@color/background_color</item>
        <item name="titleTextColor">@color/black_100</item>
        <item name="elevation">@dimen/elevation_small</item>
        <item name="navigationIcon">@drawable/ic_back_button_34</item>
    </style>
    <!--round imageview -->
    <style name="roundimageview">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
        <item name="color">@color/white_100</item>

    </style>
    <!--    Card Parent-->
    <style name="CardRecItem" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
    </style>
    <!--    Card Character-->
    <style name="CardRecItem.Character">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/card_height</item>
        <item name="android:layout_marginEnd">@dimen/medium_margin</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin</item>
        <item name="cardCornerRadius">@dimen/radius_medium</item>
        <item name="elevation">@dimen/small_elevation</item>
    </style>
    <!--    ImageView Character-->
    <style name="ImageViewCharacter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <!--    textView Character Name-->
    <style name="TextViewCharacterName">
        <item name="android:layout_width">@dimen/no_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/medium_margin</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="android:textColor">@color/white_87</item>
        <item name="android:textSize">@dimen/body_text</item>
    </style>
    <!--    RecyclerView Character-->
    <style name="RecyclerViewCharacters">
        <item name="android:layout_width">@dimen/no_size</item>
        <item name="android:layout_height">@dimen/no_size</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>

    <!-- app bar stroke-->
    <style name="AppBarStroke">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/small_stroke</item>
        <item name="android:background">@color/stroke_app_bar</item>
    </style>


    <style name="RecyclerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/app_bar_height</item>
        <item name="spanCount">2</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RecyclerStyleCreator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="spanCount">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="RecyclerStyleSeries">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/app_bar_height</item>
        <item name="spanCount">2</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="RecyclerStyleStory">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/app_bar_height</item>
        <item name="spanCount">2</item>
        <item name="android:orientation">vertical</item>
    </style>

    //chips style
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:checkable">true</item>
        <item name="chipIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="android:textSize">@dimen/body_text</item>
        <item name="height">@dimen/chip_height</item>
        <item name="chipCornerRadius">@dimen/medium_radius</item>
        <item name="chipStrokeColor">@color/red</item>
        <item name="chipStrokeWidth">@dimen/chip_stroke</item>
    </style>

    <style name="RecyclerStyleSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/app_bar_height</item>
        <item name="spanCount">2</item>
        <item name="android:orientation">vertical</item>

    </style>
</resources>
